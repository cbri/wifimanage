<div class="container" />
<% provide(:title, @access.name) %>
<div class="row">
  <aside class="span4">
  <section>
  <h1>
    <% if @access.running? %>
      <%= link_to image_tag("work.png", :class => 'gravatar' ) %>
    <% else %>
      <%= link_to image_tag("stop.png", :class => 'gravatar' ) %>
    <% end %>
    <%= @access.name %>
    <%= @access.mac %>
  </h1>
  <span>
     上行带宽:<%= convert_to_human(@access.total_up)  %>
  </span>
  <span>
  下行带宽:<%= convert_to_human(@access.total_down) %>
  </span>
  <span>
  内存空闲:<%= @access.sys_memfree %>
  </span>
  <span>
  广告插播:<%= @access.time_limit||5 %>分钟
  </span>
  </section>
  <section>
     <%= render 'trusted_mac' %>
     <div class="page-header"></div>
     <%= render 'black_mac' %>
     <div class="page-header"></div>
     <%= render 'public_ip' %>
     <div class="page-header"></div>
     <%= render 'black_ip' %>
  </section>
  </aside>
  <div class="span8">
     <%= render 'tmac_add' %>
     <div class="page-header"></div>
     <%= render 'bmac_add' %>
     <div class="page-header"></div>
     <%= render 'ip_add' %>
     <div class="page-header"></div>
     <%= render 'ipb_add' %>
  </div>
</div>
</div>

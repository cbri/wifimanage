#!/bin/sh

set -e

case "$1" in
    configure)
        
        if [ -f /opt/xplico/xplico.db.backup ]; then
            # upgrade DB
            mv /opt/xplico/xplico.db /opt/xplico/xplico_new.db
            cp /opt/xplico/xplico.db.backup /opt/xplico/xplico.db
            cd /opt/xplico/script/db/sqlite/; ./create_xplico_db.sh
            /opt/xplico/script/db/sqlite/upgrade_db.py
            rm -f /opt/xplico/xplico_new.db
        fi
    
        chown -R www-data:www-data /opt/xplico

        sed -i '/Listen 9876/ d' /etc/apache2/ports.conf
        echo "Listen 9876" >> /etc/apache2/ports.conf
        
        sed -i 's/post_max_size.*/post_max_size = 100M/g' /etc/php5/apache2/php.ini
        sed -i 's/upload_max_filesize.*/upload_max_filesize = 100M/g' /etc/php5/apache2/php.ini
        if [ -f /etc/apache2/sites-available/xplico ]; then
            ln -s /etc/apache2/sites-available/xplico /etc/apache2/sites-enabled/098-xplico
        fi

        a2enmod php5
        a2enmod rewrite
        
        apache2ctl restart
        
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;


    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
